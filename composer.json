{
    "name": "neuron-core/raptor-retrieval",
    "description": "Recursive Abstractive Processing for Tree-Organized Retrieval",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Valerio Barbera",
            "email": "valerio@inspector.dev"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "neuron-core/neuron-ai": "^2.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.0",
        "rector/rector": "^2.0",
        "tomasvotruba/type-coverage": "^2.0"
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse --memory-limit=1G -v"
        ],
        "style": [
            "php-cs-fixer fix --allow-risky=yes"
        ],
        "rector": [
            "vendor/bin/rector"
        ],
        "format": [
            "php-cs-fixer fix --allow-risky=yes",
            "vendor/bin/rector"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always"
        ]
    },
    "scripts-descriptions": {
        "analyse": "Run PHPStan static analysis against your application.",
        "style": "Run PHP CS Fixer against your application.",
        "rector": "Run rector for code refactoring.",
        "format": "Run style and rector in one step.",
        "test": "Run PHPUnit to test"
    },
    "autoload": {
        "psr-4": {
            "NeuronCore\\RaptorRetrieval\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NeuronCore\\RaptorRetrieval\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        },
        "process-timeout": 600
    }
}
